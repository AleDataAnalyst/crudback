{% extends 'base.html.twig' %}

{% block title %}Donante index{% endblock %}

{% block body %}
    <h1>Donante index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donante in donantes %}
            <tr>
                <td>{{ donante.id }}</td>
                <td>{{ donante.email }}</td>
                <td>{{ donante.roles ? donante.roles|json_encode : '' }}</td>
                <td>{{ donante.password }}</td>
                <td>{{ donante.nombre }}</td>
                <td>{{ donante.apellido }}</td>
                <td>
                    <a href="{{ path('app_donante_crud_show', {'id': donante.id}) }}">show</a>
                    <a href="{{ path('app_donante_crud_edit', {'id': donante.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_donante_crud_new') }}">Create new</a>
{% endblock %}
